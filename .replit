modules = ["flutter", "dart", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["curl", "git", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App Server"

[[workflows.workflow]]
name = "Web App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx http-server -p 5000 --cors"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "flutter run -d web-server --web-port 5000 --web-hostname 0.0.0.0"]

[[ports]]
localPort = 5000
externalPort = 80
